<%- include('../partials/header') %>

    <div class="container" style="max-width: 1000px; margin-top: 30px;">
        <div class="text-center mb-5">
            <h1 class="gradient-text" style="font-size: 2.5rem; font-weight: 800; margin-bottom: 10px;">üèÜ Community
                Leaderboard</h1>
            <p class="text-muted" style="font-size: 1.1rem;">Recognizing the top contributors making education
                accessible for everyone.</p>
        </div>

        <% if (topUsers.length> 0) { %>
            <!-- Podium Section (Top 3) -->
            <div class="podium-container mb-5">
                <% const sorted=topUsers.slice(0, 3); %>
                    <!-- 2nd Place -->
                    <div class="podium-item second">
                        <% if (sorted[1]) { %>
                            <div class="crown silver">ü•à</div>
                            <div class="avatar-wrapper">
                                <div class="avatar-placeholder">
                                    <%= sorted[1].username.charAt(0).toUpperCase() %>
                                </div>
                            </div>
                            <div class="podium-info">
                                <h3>
                                    <%= sorted[1].username %>
                                </h3>
                                <span class="badge-dept">
                                    <%= sorted[1].profile?.department || 'Student' %>
                                </span>
                                <div class="points">
                                    <%= sorted[1].gamification.points %> pts
                                </div>
                            </div>
                            <div class="podium-block silver-block">2</div>
                            <% } %>
                    </div>

                    <!-- 1st Place -->
                    <div class="podium-item first">
                        <% if (sorted[0]) { %>
                            <div class="crown gold">üëë</div>
                            <div class="avatar-wrapper ring-gold">
                                <div class="avatar-placeholder big">
                                    <%= sorted[0].username.charAt(0).toUpperCase() %>
                                </div>
                            </div>
                            <div class="podium-info text-center">
                                <h2 class="glossy-text">
                                    <%= sorted[0].username %>
                                </h2>
                                <span class="badge-dept">
                                    <%= sorted[0].profile?.department || 'Top Contributor' %>
                                </span>
                                <div class="points highlight">
                                    <%= sorted[0].gamification.points %> pts
                                </div>
                                <div class="stats-row">
                                    <span><i class="fas fa-upload"></i>
                                        <%= sorted[0].gamification.uploads %> Uploads
                                    </span>
                                </div>
                            </div>
                            <div class="podium-block gold-block">1</div>
                            <% } %>
                    </div>

                    <!-- 3rd Place -->
                    <div class="podium-item third">
                        <% if (sorted[2]) { %>
                            <div class="crown bronze">ü•â</div>
                            <div class="avatar-wrapper">
                                <div class="avatar-placeholder">
                                    <%= sorted[2].username.charAt(0).toUpperCase() %>
                                </div>
                            </div>
                            <div class="podium-info">
                                <h3>
                                    <%= sorted[2].username %>
                                </h3>
                                <span class="badge-dept">
                                    <%= sorted[2].profile?.department || 'Member' %>
                                </span>
                                <div class="points">
                                    <%= sorted[2].gamification.points %> pts
                                </div>
                            </div>
                            <div class="podium-block bronze-block">3</div>
                            <% } %>
                    </div>
            </div>

            <!-- Full List (Card Style) -->
            <div class="leaderboard-list">
                <% topUsers.forEach((u, index)=> { %>
                    <div class="rank-card <%= index < 3 ? 'top-rank' : '' %>"
                        style="animation-delay: <%= index * 0.1 %>s">
                        <div class="rank-col">
                            <% if (index===0) { %> <span class="rank-badge gold">1st</span>
                                <% } else if (index===1) { %> <span class="rank-badge silver">2nd</span>
                                    <% } else if (index===2) { %> <span class="rank-badge bronze">3rd</span>
                                        <% } else { %> <span class="rank-number">#<%= index + 1 %></span>
                                            <% } %>
                        </div>

                        <div class="user-col">
                            <div class="avatar-small">
                                <%= u.username.charAt(0).toUpperCase() %>
                            </div>
                            <div class="user-details">
                                <h4>
                                    <%= u.username %>
                                </h4>
                                <div class="meta-tags">
                                    <span class="tag dept"><i class="fas fa-graduation-cap"></i>
                                        <%= u.profile?.department || 'General' %>
                                    </span>
                                    <span class="tag grade"><i class="fas fa-layer-group"></i>
                                        <%= u.profile?.gradeLevel || 'Member' %>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="stats-col">
                            <div class="stat-item">
                                <span class="label">Uploads</span>
                                <span class="value">
                                    <%= u.gamification.uploads %>
                                </span>
                            </div>
                            <div class="stat-item points-item">
                                <span class="label">Total Points</span>
                                <span class="value points">
                                    <%= u.gamification.points %>
                                </span>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>

            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-trophy"></i>
                    <h3>No Champions Yet</h3>
                    <p>Start uploading resources to claim the throne!</p>
                    <a href="/resources/upload/new" class="btn-primary-glow">Upload Now</a>
                </div>
                <% } %>
    </div>

    <style>
        /* Premium Styles */
        .gradient-text {
            background: linear-gradient(135deg, #1a237e, #0d47a1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Podium Layout */
        .podium-container {
            display: flex;
            justify-content: center;
            align-items: flex-end;
            gap: 20px;
            height: 450px;
            /* Increased height to accommodate taller elements */
            margin-top: 50px;
            /* Added top margin for safety */
            margin-bottom: 60px;
        }

        .podium-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 220px;
            position: relative;
            z-index: 2;
        }

        .podium-item.first {
            z-index: 3;
            width: 260px;
        }

        .podium-item.second {
            transform: translateY(20px);
        }

        .podium-item.third {
            transform: translateY(40px);
        }

        .avatar-wrapper {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-bottom: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            background: white;
            padding: 3px;
        }

        .avatar-wrapper.ring-gold {
            width: 100px;
            height: 100px;
            background: linear-gradient(45deg, #FFD700, #FDB931);
            padding: 4px;
        }

        .avatar-placeholder {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: #f0f2f5;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            font-weight: bold;
            color: #555;
        }

        .avatar-placeholder.big {
            font-size: 2.5rem;
            color: #b8860b;
            background: white;
        }

        .podium-info {
            text-align: center;
            margin-bottom: 15px;
        }

        .podium-info h3,
        .podium-info h2 {
            margin: 5px 0;
            color: #333;
        }

        .badge-dept {
            background: #e8eaf6;
            color: #3f51b5;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
        }

        .points {
            font-weight: 800;
            color: var(--primary-color);
            font-size: 1.2rem;
            margin-top: 5px;
        }

        .points.highlight {
            font-size: 1.5rem;
            color: #ff8f00;
        }

        .podium-block {
            width: 100%;
            border-radius: 15px 15px 0 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            font-weight: 900;
            color: white;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

        .gold-block {
            height: 160px;
            background: linear-gradient(to bottom, #FFD700, #FDB931);
        }

        .silver-block {
            height: 120px;
            background: linear-gradient(to bottom, #E0E0E0, #BDBDBD);
        }

        .bronze-block {
            height: 90px;
            background: linear-gradient(to bottom, #CD7F32, #A0522D);
        }

        .crown {
            font-size: 2rem;
            margin-bottom: 5px;
            animation: float 3s infinite ease-in-out;
        }

        /* List Styles */
        .leaderboard-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .rank-card {
            display: flex;
            align-items: center;
            background: white;
            padding: 15px 25px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.03);
            transition: transform 0.2s, box-shadow 0.2s;
            animation: slideUp 0.5s forwards;
            opacity: 0;
            border-left: 5px solid transparent;
        }

        .rank-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        }

        .rank-card.top-rank {
            background: #fffcf0;
            border-left-color: #ffd700;
        }

        .rank-col {
            flex: 0 0 60px;
            font-weight: bold;
        }

        .rank-badge {
            padding: 5px 10px;
            border-radius: 20px;
            color: white;
            font-size: 0.85rem;
        }

        .rank-badge.gold {
            background: #FFD700;
        }

        .rank-badge.silver {
            background: #C0C0C0;
        }

        .rank-badge.bronze {
            background: #CD7F32;
        }

        .rank-number {
            font-size: 1.2rem;
            color: #777;
        }

        .user-col {
            flex: 1;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .avatar-small {
            width: 45px;
            height: 45px;
            background: #e0e0e0;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: #555;
        }

        .user-details h4 {
            margin: 0;
            color: #333;
            margin-bottom: 4px;
        }

        .meta-tags {
            display: flex;
            gap: 10px;
        }

        .tag {
            font-size: 0.75rem;
            color: #666;
            background: #f5f5f5;
            padding: 2px 8px;
            border-radius: 6px;
        }

        .stats-col {
            display: flex;
            gap: 30px;
            text-align: right;
        }

        .stat-item {
            display: flex;
            flex-direction: column;
        }

        .stat-item .label {
            font-size: 0.7rem;
            color: #999;
            text-transform: uppercase;
        }

        .stat-item .value {
            font-weight: bold;
            font-size: 1.1rem;
            color: #333;
        }

        .stat-item .points {
            color: var(--primary-color);
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 768px) {
            .podium-container {
                height: auto;
                flex-direction: column;
                align-items: center;
                margin-bottom: 30px;
            }

            .podium-item {
                width: 100%;
                transform: none !important;
                margin-bottom: 20px;
            }

            .podium-block {
                height: 40px !important;
                border-radius: 8px;
            }
        }
    </style>

    <style>
        .leaderboard-row:hover {
            background-color: #f9f9f9;
        }
    </style>

    <%- include('../partials/footer') %>