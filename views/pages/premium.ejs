<%- include('../partials/header') %>
    <div class="mb-2 text-center">
        <h1 style="color: gold; text-shadow: 1px 1px 2px black;">Premium Content</h1>
        <p>Exclusive resources for advanced learning.</p>
    </div>

    <div class="grid">
        <% if (resources.length> 0) { %>
            <% resources.forEach(resource=> { %>
                <div class="card" style="border: 2px solid gold;">
                    <h3>
                        <%= resource.title %>
                    </h3>
                    <p class="text-muted">By <%= resource.uploader ? resource.uploader.username : 'Unknown' %>
                    </p>
                    <p>
                        <%= resource.description.substring(0, 100) %>...
                    </p>
                    <div style="margin-top: 15px;">
                        <a href="/resources/<%= resource._id %>" class="btn">Access Now</a>
                    </div>
                </div>
                <% }) %>
                    <% } else { %>
                        <p>No premium content available yet.</p>
                        <% } %>
    </div>
    <%- include('../partials/footer') %>